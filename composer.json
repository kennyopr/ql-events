{
    "name": "the-events-calendar/ql-events",
    "description": "The Events Calendar bindings for WPGraphQL",
    "type": "wordpress-plugin",
    "authors": [
        {
          "name": "Geoff Taylor",
          "email": "geoff@axistaylor.com",
          "role": "Lead Developer"
        }
    ],
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "wp-coding-standards/wpcs": "^2.3",
        "johnpbloch/wordpress": "~6",
        "wpackagist-plugin/the-events-calendar": "^6.0",
        "wpackagist-plugin/event-tickets": "5.5.9.1",
        "wp-graphql/wp-graphql-jwt-authentication": "^0.6.0",
        "wp-graphql/wp-graphql-woocommerce": "^0.12.1",
        "wpackagist-plugin/woocommerce": "^7.5",
        "wpackagist-plugin/woocommerce-gateway-stripe": "^7.2",
        "wpackagist-plugin/wp-graphql": "^1.14",
        "wpackagist-theme/twentytwentyone": "^1.7",
        "wp-cli/wp-cli-bundle": "^2.7",
        "the-events-calendar/event-tickets-plus": "dev-master",
        "the-events-calendar/events-virtual": "dev-master",
        "the-events-calendar/events-filterbar": "dev-master",
        "the-events-calendar/events-pro": "dev-master",
        "lucatume/wp-browser": "^3.1",
        "codeception/module-asserts": "^1.0",
        "codeception/module-rest": "^2.0",
        "codeception/util-universalframework": "^1.0",
        "wp-graphql/wp-graphql-testcase": "^2.3",
        "fzaninotto/faker": "*"
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "johnpbloch/wordpress-core-installer": true,
            "composer/installers": true
        }
    },
    "scripts": {
        "install-test-env": "bash bin/install-test-env.local.sh",
        "cleanup": "bash bin/cleanup.local.sh",
        "cli": "docker-compose run --rm --workdir=/var/www/html/wp-content/plugins/ql-events --user $(id -u) wordpress wait_for_it $TEST_DB -s -t 300 --",
        "run-codeception": "env TEST_DB=mysql:3306 composer cli vendor/bin/codecept run wpunit --",
        "lint": "vendor/bin/phpcs -vp .",
        "fix": "vendor/bin/phpcbf -vp ."
    },
    "archive": {
        "name": "ql-events",
        "exclude": [
            "/.*",
            "/bin",
            "/plugin-build",
            "/tests",
            "!/vendor",
            "/codeception.dist.yml",
            "/codeception.tric.yml",
            "/codeception.yml",
            "/composer.json",
            "/composer.lock",
            "/docker-compose.yml",
            "/Dockerfile",
            "/README.md"
        ]
    },
    "extra": {
        "wordpress-install-dir": "local/public",
        "installer-paths": {
            "local/public/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "local/public/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "local/public/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    },
    "repositories": {
        "events_pro": {
            "type": "vcs",
            "url": "git@github.com:the-events-calendar/events-pro.git"
        },
        "events_filterbar": {
            "type": "vcs",
            "url": "git@github.com:the-events-calendar/events-filterbar.git"
        },
        "events_virtual": {
            "type": "vcs",
            "url": "git@github.com:the-events-calendar/events-virtual.git"
        },
        "event_tickets_plus": {
            "type": "vcs",
            "url": "git@github.com:the-events-calendar/event-tickets-plus.git"
        },
        "wpackagist": {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    }
}
